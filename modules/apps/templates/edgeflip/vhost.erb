<VirtualHost *:80>
    ServerName <%= edgeflip_hostname %>
    ServerAdmin devops@edgeflip.com

    DocumentRoot /var/www/edgeflip

    LogLevel info
        ErrorLog syslog:local6

    CustomLog "|/usr/bin/logger -t <%= edgeflip_hostname %> -p news.info" xff_syslog_api
    CustomLog /var/log/apache2/syslog xff_api


    <Directory /var/www/edgeflip>
        Options -Indexes FollowSymLinks MultiViews
        AllowOverride All
        Order allow,deny
        allow from all
    </Directory>

    WSGIDaemonProcess edgeflip processes=2 threads=50
    WSGIScriptAlias / /var/www/edgeflip/edgeflip.wsgi

</VirtualHost>
